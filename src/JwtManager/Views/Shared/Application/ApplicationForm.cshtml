@model LegnicaIT.JwtManager.Models.FormModel<LegnicaIT.JwtManager.Models.AppModel>

<h2 class="form-signin-heading">Apps</h2>

<div class="form-group">
    @Html.HiddenFor(m => m.Model.Id)

    @Html.LabelFor(m => m.Model.Name, new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @(Model.IsEdit ? Html.TextBoxFor(m => m.Model.Name, new { @class = "form-control" }) : Html.LabelForModel(Model.Model.Name))
    </div>
</div>
