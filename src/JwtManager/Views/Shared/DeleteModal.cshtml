@model LegnicaIT.JwtManager.Models.DeleteModalModel

<div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Delete Confirmation</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                @using (Html.BeginForm(Model.Action, Model.Controller, new { id = 0 }, FormMethod.Post, true, new { name = "modalDeleteConfirm", @class = "pull-right" }))
                {
                    @Html.Hidden("id", 0);
                    <button type="submit" class="btn btn-danger">Delete</button>
                }
            </div>
        </div>
    </div>
</div>

<script>
    var item_to_delete;
    $("[name='deleteItem']").click(function () {
        item_to_delete = $(this).data('id');
    });

    $("[name='modalDeleteConfirm']").click(function (e) {
        e.preventDefault();
        var idValue = $(this).find('input[name=id]');
        idValue.val(item_to_delete);

        this.submit();
    });
</script>