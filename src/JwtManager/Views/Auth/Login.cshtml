@model LegnicaIT.JwtManager.Models.LoginModel

@{
    ViewData["Title"] = "Login page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>Login page</title>

    <!-- Bootstrap core CSS -->
    <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <link href="../../assets/css/ie10-viewport-bug-workaround.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="signin.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
   @using (Html.BeginForm(null, null, FormMethod.Post))
   {

    <div class="container">
        <form class="form-signin">
            @Html.AntiForgeryToken()
            <h2 class="form-signin-heading">Log in</h2>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email address" })
                </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AppId, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.AppId, new { @class = "form-control", @placeholder = "App id" })
            </div>
           
                <button class="btn btn-lg btn-primary" type="submit" id="btnLogin" style="height:50px;width:150px">Log in</button>
</form>

    </div> <!-- /container -->
   }

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>
</body>
</html>