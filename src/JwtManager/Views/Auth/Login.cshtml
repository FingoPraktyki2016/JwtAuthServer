@model LegnicaIT.JwtManager.Models.LoginModel

@{
    ViewData["Title"] = "Login page";
}
   @using (Html.BeginForm(FormMethod.Post, true, new { @class = "form-horizontal"}))
   {
            <h2 class="form-signin-heading">Log in</h2>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email address" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AppId, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.AppId, new { @class = "form-control", placeholder = "App id" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <button class="btn btn-lg btn-primary" type="submit" id="btnLogin">Log in</button>
                </div>
            </div>
   }
