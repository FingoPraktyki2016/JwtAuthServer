@model LegnicaIT.JwtManager.Models.Auth.RegisterViewModel

@{
    ViewData["Title"] = "Login page";
}
@using (Html.BeginForm("Register", "Auth", FormMethod.Post))
{    <h2>Register</h2>
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email address", type = "email", required = "required" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "required" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button class="btn btn-lg btn-primary jwt-btn-big" type="submit" id="btnLogin">Register</button>
            </div>
        </div>
    </div>

}
