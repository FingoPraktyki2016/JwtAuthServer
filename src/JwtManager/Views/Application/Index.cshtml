@using LegnicaIT.JwtManager.Models
@using Microsoft.AspNetCore.Http
@model List<AppViewModel>

@{
    ViewData["Title"] = "Apps";
}
<h2>Your applications</h2>

@Html.AntiForgeryToken()

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>App Id</th>
            <th>App Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model)
        {
            <tr>
                <td>@app.Id</td>
                <td>@Html.ActionLink(app.Name, "Details", "Application", new { id = app.Id })</td>
                <td width="150px">
                    @Html.ActionLink("Edit", "Edit", "Application", new { id = app.Id }, new { @class = "btn btn-primary pull-left", role = "button" })
                    <button name="deleteItem" class="btn btn-danger" data-target="#basic" data-toggle="modal" data-id="@app.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("DeleteModal")