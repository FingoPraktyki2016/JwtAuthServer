@using LegnicaIT.JwtManager.Models

@model List<LegnicaIT.JwtManager.Models.User.UserSimpleModel>

@{
    ViewData["Title"] = "All users lists";
}

<br/>

<h2 align="center">All users list</h2>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
            {
            <tr>
                <td>@user.Id</td>
                <td>@Html.ActionLink(user.Name, "Details", "User", new { id = user.Id })</td>
                <td>@user.Email</td>            
                    <td>
                        @Html.ActionLink("Edit", "Edit", "User", new { id = user.Id }, new { @class = "btn btn-primary pull-left", role = "button" })
                        <button style="margin-left:30px" name="deleteItem" class="btn btn-danger" data-target="#basic" data-toggle="modal" data-id="@user.Id">Delete</button>
                    </td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("DeleteModal", new DeleteModalModel("UserDeleteAll", "Application"))