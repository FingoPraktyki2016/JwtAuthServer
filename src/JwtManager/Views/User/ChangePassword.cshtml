@model LegnicaIT.JwtManager.Models.FormModel<LegnicaIT.JwtManager.Models.User.EditPasswordViewModel>

<h2 align="center">Change Password</h2>

<br/>
@using (Html.BeginForm(FormMethod.Post, true))
{
     @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div id="container" align="center">
        <table style="border-collapse:separate; border-spacing:5px">
            <tr>
                <td align="right">@Html.LabelFor(m => m.Model.OldPassword, new { @class = "control-label col-sm-12" })</td>
                <td align="left">@Html.PasswordFor(m => m.Model.OldPassword, new { @class = "form-control" })</td>
                @Html.ValidationMessageFor(m => m.Model.OldPassword, "", new { @class = "text-danger" })
            </tr>

            <tr>
                <td align="right">@Html.LabelFor(m => m.Model.NewPassword, new { @class = "control-label col-sm-12" })</td>
                <td align="left">@Html.PasswordFor(m => m.Model.NewPassword, new { @class = "form-control" })</td>
                @Html.ValidationMessageFor(m => m.Model.NewPassword, "", new { @class = "text-danger" })
            </tr>

            <tr>
                <td align="right">@Html.LabelFor(m => m.Model.ConfirmPassword, new { @class = "control-label col-sm-12" })</td>
                <td align="left">@Html.PasswordFor(m => m.Model.ConfirmPassword, new { @class = "form-control" })</td>
                @Html.ValidationMessageFor(m => m.Model.ConfirmPassword, "", new { @class = "text-danger" })
            </tr>
        </table>
        <br />
    </div>
    <div align="center" style="margin-left:170px"> <input type="submit" class="btn btn-primary btn-lg " value="Change password"/></div>
}
